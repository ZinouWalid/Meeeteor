<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meeeteor - room</title>
    <link
    href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet"
  />
  <link rel="icon" href="https://seeklogo.com/images/M/meteor-logo-513B96BFB2-seeklogo.com.png">
  <link rel="stylesheet" href="share.css" /> 
    <link rel="stylesheet" href="style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@700&display=swap" rel="stylesheet">  
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>

    <!-- Record functionality -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="header">
      <div class="logo">
        <div class="header__back">
          <i class="fas fa-angle-left"></i>
        </div >
        <div id="head_nav"> 
          <div id="logo_name">
            <img
            src="https://seeklogo.com/images/M/meteor-logo-513B96BFB2-seeklogo.com.png"
            alt=""
          />
            <h3 class="APP_NAME">Meeeteor</h2>
          </div>
          
        </div>
        
      </div>
    </div>  
    </div>  
    
    <div class="main">  
      <div class="main__left">
        <video class="video" autoplay></video>
        <div class="videos__group">
         <div id="video-grid">
        </div>
      </div>
    
    
      <div class="options">
      
        <div class="option_left">
          <div class="options__button"> 
            <button title="record" type="button" onclick="recordScreen()" class="btn btn-info"><i class="fas fa-record-vinyl"></i></button>
          </div>
          
            <div class="options__button">
              <button title="stop recording" type="button" class="red_btn" style="display: none
              ;" id="stop">Stop</button>
            </div>
          
            <span>
              <a id="download" style="display: none;">
                <div class="options__button ">
                  <button title="download" type="button" class="green_btn"><i class="fas fa-download"></i></button>
                </div>
              </a>
            </span>
        </div>
               
           
         <div class="option_middle">
           
          <div class="options__button">
            <button title="Activate/Disactivate camera" id="stopVideo" class="blue_btn">
              <i class="fa fa-video-camera"></i>
            </button>
          </div>
                  

            <div id="muteButton" class="options__button">
               <button title="Activate/Mute microphone" class="blue_btn"> 
                 <i class="fa fa-microphone"></i>
               </button>
            </div>          
        
            <div class="options__button start" >
              <button title="Present now" class="blue_btn">
                <i class="fas fa-desktop"></i>          
              </button>
           </div>

           <div class="options__button  stop_share" >
             <button title="end Presenting now" >
               <img id="end_sharing" src="desktop_access_disabled_white_24dp.svg" alt="">        
             </button>
          </div>

         </div>
              
          <div class="option_right">
            
            <div id="showChat" class="options__button">
              <button>
                 <i class="fa fa-comment"></i>
              </button>
            </div>

            
            <div  class="options__button">
              <form action="/logout" method="get">

                <button title="Leave the call" id="quitButton" class="red_btn">
                  <i class="fas fa-sign-out-alt"></i>
                </button>
              </form>
            </div>
          </div>
               
        </div>

    </div>
   
    <div class="main__right">
      <div class="main__chat_window">
          <div class="messages">
                 
          </div>
      </div>
     
      <div class="main__message_container">
        <div class="options__button">
        <form id="send-container">
          <input id="message-input" type="text" autocomplete="off" placeholder="Type message here...">
          <button type="submit" id="send-button" title="Send now" class="green_btn"><i class="fa fa-send" aria-hidden="true"></i></button>
        </form>
        </div>
      </div>
    </div>
  </div>
   
  <pre id="log"></pre>

  <script src="share_script.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="script.js"></script>
  <script defer src="http://localhost:3030/socket.io/socket.io.js"></script>
  <script src="record.js"></script>
</body>
</html>